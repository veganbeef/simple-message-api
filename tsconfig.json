{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom","es6"],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["src/test", "node_modules"]
}

